

<header>
	<div id="userDetails"> <% if user_signed_in? %>
	
	<p> Welcome, <%= current_user.email %> </p>
	<div id="logout">
		<%= link_to 'logout', '/logout'%>
	</div>
	<% end %>
	
</div>
</header>




<%= form_tag '/create_tweet' do %>
<%= text_area_tag :content %>
<%= submit_tag "Create Tweet"%>
<% end %>



<%= form_tag '/', method: :get do %>
<%= text_field_tag 'search' %><br>
<%= submit_tag 'search' %>
 <% end %>
 




<div class="tweets">
<% @tweets.each do |tweet| %>
 <%= render 'tweet', :tweet => tweet %>
 
 <% end %>
</div>

